# Google Cloud Configuration (Service Account - for production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Google AI Studio API Key (for testing/development)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-api-key-here

# Vertex AI Configuration
VERTEX_AI_REGION=us-central1
VERTEX_AI_MODEL=gemini-2.0-flash-exp
VERTEX_AI_VOICE=Puck

# Voice Assistant Configuration
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT_MINUTES=30
MAX_RESPONSE_LATENCY_MS=300

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key

# Strands Configuration
STRANDS_MODEL=claude-sonnet-4-5-20250929
STRANDS_MAX_TURNS=10

# Claude Code SDK Configuration
CLAUDE_CODE_PERMISSION_MODE=plan
CLAUDE_CODE_REPOSITORY_PATH=./

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Server Configuration
HOST=localhost
PORT=8000