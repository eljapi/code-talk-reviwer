# Google Cloud Configuration (Service Account - for production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Google AI Studio API Key (for testing/development)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-api-key-here

# Vertex AI Configuration
VERTEX_AI_REGION=us-central1
# Live API Models: gemini-2.5-flash-native-audio-preview-09-2025 (latest, recommended)
#                  gemini-2.5-flash-native-audio-preview-09-2025 (deprecated December 9, 2025)
VERTEX_AI_MODEL=gemini-2.5-flash-native-audio-preview-09-2025
VERTEX_AI_VOICE=Puck

# Voice Assistant Configuration
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT_MINUTES=30
MAX_RESPONSE_LATENCY_MS=300

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key

# Strands Configuration
STRANDS_MODEL=claude-sonnet-4-5-20250929
STRANDS_MAX_TURNS=10

# Claude Code SDK Configuration
# Permission mode: 'plan' (default, asks before changes), 'ask', 'acceptEdits', 'auto'
CLAUDE_CODE_PERMISSION_MODE=plan

# Base directory containing all your projects
# Claude Code will automatically discover all subdirectories as accessible projects
# This allows queries like: "List all projects", "Search across all projects", etc.
# Example: C:\Users\japi\Documents\git\ (grants access to all subdirectories)
# Default: ./ (current directory)
REPOSITORY_BASE_PATH=./

# Claude Code automatically excludes: .git, .venv, venv, node_modules, __pycache__, etc.
# If you need custom exclusions, you can modify them in repository_manager.py

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Audio Configuration
# Hardware sample rate (e.g., 48000 for Focusrite Scarlett)
AUDIO_SAMPLE_RATE=48000
AUDIO_CHUNK_SIZE=1024

# Server Configuration
HOST=localhost
PORT=8000